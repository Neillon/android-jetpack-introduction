<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/dog_navigation"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.neillon.dogs.view.fragments.ListFragment"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_detail_fragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action
            android:id="@+id/action_settings"
            app:destination="@id/settingsFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.neillon.dogs.view.fragments.DetailFragment"
        android:label="DetailFragment" >
        <action
            android:id="@+id/action_list_fragment"
            app:destination="@id/listFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <argument
            android:name="dogUUId"
            android:defaultValue="-1"
            app:argType="integer"
            />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.neillon.dogs.view.fragments.SettingsFragment"
        android:label="SettingsFragment" />

</navigation>